<SAM>
	<PortGlyph>
	
		<!-- ******************************************************* -->	
		<NodeProperties>

			<Background>
			
				<Gradient type="gradient" gradient_type="linear">
				
					<!-- Optional -->
					<CoordinateMode value="Logical"/>
					<Spread value="pad"/>
					
					<!-- Depending on the gradient_type -->
					<PositionStart x="BottomMiddle" y="BottomMiddle"/>
					<PositionEnd   x="TopMiddle" 		y="TopMiddle"/>
					<Focal   			 x="TopMiddle" 		y="TopMiddle"/>
					<Center 			 x="center" 		  y="center"/>
					<Radius 			 value="2.0"/>
					<Angle  			 value="1.56"/>
					
					<!-- Required - STOPS -->
					<Stop percent="0.0" color="(@CurScheme@)/Ports/Background/Gradient1"/>
					<Stop percent="1.0" color="(@CurScheme@)/Ports/Background/Gradient2"/>					
					
				</Gradient>
				
			</Background>
			
			<Text>
				<Color type="string" value="(@CurScheme@)/Ports/Text/Color"/>
                <Size  type="double" value="8.0"/>
                <Name  type="string" value="Helvetica"/>
			</Text>
			
			<NubColor type="string" value="(@CurScheme@)/Ports/NubColor"/>
			
            <StrictColor type="string" value="(@CurScheme@)/Ports/Symbol/Strict"/>
            <ElseColor type="string" value="(@CurScheme@)/Ports/Symbol/Else"/>
            <InvalidColor type="string" value="(@CurScheme@)/Ports/Symbol/Invalid"/>

            <StrictBorderColor type="string" value="(@CurScheme@)/Ports/Symbol/StrictBorder"/>
            <ElseBorderColor type="string" value="(@CurScheme@)/Ports/Symbol/ElseBorder"/>
            <InvalidBorderColor type="string" value="(@CurScheme@)/Ports/Symbol/InvalidBorder"/>
            
			<Border>
				<Color 			type="color" 	value="0,0,0,1.0"/>
				<Width 			type="double" value="1.0"/>
				<Style 			type="string" value="SolidLine"/>
				<CapStyle 	type="string" value="FlatCap"/>
				<JoinStyle 	type="string" value="RoundJoin"/>
			</Border>
			
			<Selectable type="bool" 	value="true"/>
			<Movable 		type="bool" 	value="true"/>
			<MiterLimit type="double" value="2.0"/>
			
		</NodeProperties>
		<!-- ******************************************************* -->
		
	</PortGlyph>	
</SAM>
		