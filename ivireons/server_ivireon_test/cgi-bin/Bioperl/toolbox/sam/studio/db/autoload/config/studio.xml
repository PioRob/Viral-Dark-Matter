<SAM>
	<Studio>
	
	  <!-- set value to false to disable -->
		<M3IMemoryTracking type="bool" value="true"/>
		<DebugFilters type="bool" value="false"/>
	
		<!-- ******************************************************* -->
		<Gradient type="gradient" gradient_type="linear">
				
			<!-- Optional -->
			<CoordinateMode value="StretchToDevice"/>
			<Spread value="pad"/>
			
			<!-- Depending on the gradient_type -->
			<PositionStart x="BottomMiddle" y="BottomMiddle"/>
			<PositionEnd   x="TopMiddle"    y="TopMiddle"/>
			
			<!-- Required - STOPS -->
			<Stop percent="0.0" color="(@CurScheme@)/Class/Background/Gradient1"/>
			<Stop percent="1.0" color="(@CurScheme@)/Class/Background/Gradient2"/>					
					
		</Gradient>
		<!-- ******************************************************* -->
        
        <Components>
            <WindowBackground value="(@CurScheme@)/Components/WindowBackground"/>
        </Components>
                
        <MappingTable>
            <Category       value="(@CurScheme@)/MappingTable/Category"/>
            <Subsection     value="(@CurScheme@)/MappingTable/Subsection"/>
            
            <SoftwareBG     value="(@CurScheme@)/MappingTable/SoftwareBG"/>
            <SoftwareFG     value="(@CurScheme@)/MappingTable/SoftwareFG"/>
            <SimulinkBG     value="(@CurScheme@)/MappingTable/SimulinkBG"/>
            <SimulinkFG     value="(@CurScheme@)/MappingTable/SimulinkFG"/>
            
            <SoftwareHeaderBG     value="(@CurScheme@)/MappingTable/SoftwareHeaderBG"/>
            <SoftwareHeaderFG     value="(@CurScheme@)/MappingTable/SoftwareHeaderFG"/>
            <SimulinkHeaderBG     value="(@CurScheme@)/MappingTable/SimulinkHeaderBG"/>
            <SimulinkHeaderFG     value="(@CurScheme@)/MappingTable/SimulinkHeaderFG"/>            
            
            
            <Secondary      value="(@CurScheme@)/MappingTable/Secondary"/>
            <Label          value="(@CurScheme@)/MappingTable/Label"/>
            <Text           value="(@CurScheme@)/MappingTable/Text"/>
            <Line           value="(@CurScheme@)/MappingTable/Line"/>
            <WidgetFill     value="(@CurScheme@)/MappingTable/WidgetFill"/>
            <HeaderTextFG   value="(@CurScheme@)/MappingTable/HeaderText"/>
        </MappingTable>
        
		<!-- ******************************************************* -->	
		<Layout>
			<Default>
				<WindowSize>
					<Width type="int" value="800"/>
					<Height type="int" value="600"/>
				</WindowSize>
			</Default>
		</Layout>
		<!-- ******************************************************* -->
	
	</Studio>
	
</SAM>
	




